<div class="success"><%= notice %></div>
<div class="fail"><%= alert %></div>
<h1>Books</h1>
<table class="booker">
    <tr class="booker__col">
        <th>Ttile</th>
        <th>Body</th>
        <th></th>
    </tr>
    <% @books.each do |book| %>
    <tr>
        <td><%= book.title %> </td>
        <td><%= book.body %> </td>
        <td>
            <%= link_to "Show" , book_path(book.id), {class: "booker__crud"} %>
            <%= link_to "Edit" , edit_book_path(book.id), {class: "booker__crud"}  %>
            <%= link_to "Destroy" , destroy_book_path(book.id) ,method: "delete", class: "booker__crud", "data-confirm" => "本当に削除しますか？" %>
        </td>
    </tr>
    <% end %>
</table>

<%= render 'shared/book_error' %>

<h1>編集画面</h1>
<%= form_with model:@books, url:"/books", local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
        <h4>Body</h4>
        <%= f.text_area :body %>
    <%= f.submit 'Create Book', class:"booker__submit" %>
<% end %>
