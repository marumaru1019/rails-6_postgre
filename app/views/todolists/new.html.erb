<h1>新規投稿</h1>
<!-- form_with部分 -->
<%= form_with model: @list, url:'/todo/create', local:true do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>本文</h4>
  <%= f.text_area :body %>

  <!-- 画像投稿用 -->
  <h4>画像</h4>
  <%= f.attachment_field :image %>

  <%= f.submit '投稿' %>
<% end %>

<%= link_to "全体画面へ", "/todo/index" %>

<% @lists.each do |list| %>
  <%= list.title %>
<% end %>